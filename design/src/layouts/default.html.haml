    / define the modal for profile upload
    #profile-upload-modal.general-modal.modal.fade{tabindex:"-1", role:"dialog", aria-hidden:"true"}
      .modal-dialog
        .modal-content
          .modal-header
            %button.close{data-dismiss:"modal", aria-hidden:"true"} &times;
            %modal-title Upload Image
          .modal-body
            .row
              .original-size.col-md-6.no-gutter

                .original-upload-photo
                  .cropMain
                    .crop-container
                      .crop-overlay
                      %img{src:"/images/user-avatar/Avatar-Male120x120.png", class:"crop-img"}/

                  .cropSlider.noUi-target.col-md-12.no-gutter
                    .small-illustration
                      %span
                        %i.fa.fa-picture-o

                    .noUi-base.noUi-background.noUi-horizontal.slider-wrapper
                      .noUi-origin.noUi-origin-lower
                        .noUi-handle.noUi-handle-lower

                    .large-illustration
                      %span
                        %i.fa.fa-picture-o.fa-2x

              .crop-size.col-md-6.no-gutter
                .crop-photo
                  %p
                    %span Preview
                  .photo-wrapper-crop
                    %img.img-rounded{src:"http://placehold.it/220x220", alt:"user avatar"}/
          .modal-footer
            .wrap-send-btn
              .file-upload.btn.btn-success
                %span Upload Picture
                %input.upload{type:"file"}/
              %button.save-btn.btn.btn-info{type:"button"}
                %span
                  Save
