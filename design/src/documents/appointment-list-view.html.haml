.appointment-listview

  / Modals for Appointment request confirm
  #confirm-modal.general-modal.modal.fade{tabindex:"-1", role:"dialog", aria-hidden:"true"}
    .modal-dialog
      .modal-content
        .modal-header
          %button.close{data-dismiss:"modal", aria-hidden:"true"} &times;
          %modal-title Congratulations!
        .modal-body.larger-bottom
          %h3 The appointment with John Patient was successfully confirmed
          .wrap-send-btn
            %button.btn.btn-info{type:"submit"}
              %span
                %i.icon-envelope4.integr-icon
                Send John a Message

  / Modals for Appointment request decline
  #decline-modal.general-modal.modal.fade{tabindex:"-1", role:"dialog", aria-hidden:"true"}
    .modal-dialog
      .modal-content
        .modal-header
          %button.close{data-dismiss:"modal", aria-hidden:"true"} &times;
          %modal-title Are you sure?
        .modal-body
          %h3 Are you sure you want to decline this appointment request from John Patient?
          %form.form-horizontal{action:"", method:"post", enctype:"multipart/form-data"} 
            .form-group
              .message-title
                %strong Message
                 (optional)
              .col-md-12
                %textarea.form-control{name:""}
            .form-actions
              %button.btn.btn-info{type:"submit"} Yes, Decline Request
              %a.text-danger.link-confirm{href:"#"} No, go back

  /  Modal for sucessfully declines a request
  #decline-success-modal.general-modal.modal.fade{tabindex:"-1", role:"dialog", aria-hidden:"true"}
    .modal-dialog
      .modal-content
        .modal-header
          %button.close{data-dismiss:"modal", aria-hidden:"true"} &times;
          %modal-title Request declined
        .modal-body.larger-bottom
          %h3 The appointment request from [PATIENT FIRST AND LAST NAME] was declined

  / Modals for Appointment request cancel
  #cancel-modal.general-modal.modal.fade{tabindex:"-1", role:"dialog", aria-hidden:"true"}
    .modal-dialog
      .modal-content
        .modal-header
          %button.close{data-dismiss:"modal", aria-hidden:"true"} &times;
          %modal-title Are you sure?
        .modal-body.larger-bottom
          %h3 Are you sure you want to cancel this appointment with John Patient?
          
          .wrap-send-btn
            %button.btn.btn-info{type:"submit"} Yes, Cancel Appointment
            %a.text-danger.link-confirm{href:"#"} No, go back

  /  Modal for successfully cancels an appointment
  #cancel-success-modal.general-modal.modal.fade{tabindex:"-1", role:"dialog", aria-hidden:"true"}
    .modal-dialog
      .modal-content
        .modal-header
