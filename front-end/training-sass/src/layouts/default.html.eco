<!DOCTYPE html>
<html>
<head>
  <!-- Rendered with Eco -->
  <meta charset="utf-8" />

  <!-- Site Properities -->
  <title><%= @site.title %></title>
  <meta name="description" content="<%= @site.description %>" />
  <meta name="keywords" content="<%= @site.keywords %>" />

  <!-- DocPad Meta -->
  <%- @getBlock('meta').toHTML() %>

  <!-- DocPad Styles + Our Own -->
  <%- @getBlock('styles').add(@site.styles).toHTML() %>
</head>
<body class="container">
  <!-- HEADER -->
  <header id="main-header">
    <div class="l-container l-clearfix">
      <a href="" class="l-align-right l-clearfix"><img src="images/logo.png" alt="Logo"></a>
      <ul class="nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Join Doe <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><a href="#">Settings</a></li>
            <li><a href="#">Help</a></li>
            <li class="divider"></li>
            <li><a href="#">Sign out</a></li>
          </ul>
        </li>
      </ul>
    </div>
    <nav class="theme-nav nav l-navigation">
      <ul>
        <li class="active"><a href="">Dashboard</a></li>
        <li><a href="">Book Manager</a></li>
        <li class="l-nav-app">
          <a href="">App Editor</a></li>
        <li><a href="">Analytics</a></li>
      </ul>
    </nav>
  </header> <!-- END HEADER -->
  <article>
    <%- @content %>
  </article>
  <!-- DocPad Scripts + Our Own -->
  <%- @getBlock('scripts').add(@site.scripts).toHTML() %>
</body>
</html>
